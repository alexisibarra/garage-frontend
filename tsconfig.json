{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          // "unknownProperties": "ignore", // "ignore" | "warning" | "error"
          "validProperties": [
            "backgroundColor",
            "elevation",
            "flexDirection",
            "fontFamily",
            "fontSize",
            "fontWeight",
            "justifyContent",
            "marginHorizontal",
            "marginVertical",
            "paddingHorizontal",
            "paddingVertical",
            "shadowOpacity",
            "shadowRadius"
          ]
        }
      }
    ]
  }
}
